{
  "name": "m365-roadmap-agent",
  "version": "1.0.0",
  "description": "Microsoft 365 Roadmap Agent with TypeSpec",
  "scripts": {
    "tsp:compile": "tsp compile tsp && node scripts/fix-metadata.js && node scripts/add-examples.js",
    "tsp:watch": "tsp compile tsp --watch",
    "tsp:format": "tsp format tsp/**/*.tsp",
    "test": "node tests/validate-openapi.js",
    "test:integration": "node tests/integration-test.js",
    "test:all": "npm test && npm run test:integration",
    "prebuild": "npm run tsp:compile",
    "build": "npm run tsp:compile"
  },
  "devDependencies": {
    "@typespec/compiler": "^0.62.0",
    "@typespec/http": "^0.62.0",
    "@typespec/openapi3": "^0.62.0",
    "@typespec/rest": "^0.62.0",
    "@typespec/versioning": "^0.62.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
